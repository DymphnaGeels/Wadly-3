@using Wadly_3.Database;
@model Wadly_3.Database.Film
@{
    ViewData["Title"] = "Film";
    List<Voorstelling> voorstellingen = ViewData["voorstellingen"] as List<Voorstelling>;
}
<div class="detailpagina">
    <div class="containerdetail">

        <h1>@Model.Naam</h1>

        <p class="bescrhijvingdetail">@Model.Beschrijving</p>
        <p>De prijs is @Model.Prijs euro</p>



    </div>

    <div class="Middenstuk">
        <div class="image">
            <img src="@Model.Img" alt="@Model.Naam" />
        </div>

        <div class="DATUMTIJD">
            <p>Koop snel kaartjes voordat ze uitverkocht zijn! Ze zijn te zien op:</p>

            @if (voorstellingen != null)
            {
                foreach (Voorstelling v in voorstellingen)
                {
                    <p>
                        @v.Datum.ToString("D") 
                        - Aantal tickets over: @v.Voorraad.ToString("D")
                    </p>
                }
            }
        </div>
    </div>

    <div class="Bestelknop">
        <a href="/Betaal">Tickets</a>
    </div>
</div>


