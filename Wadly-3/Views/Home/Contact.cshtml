@model SendAndStore.Models.Person 
@{
    ViewData["Title"] = "Contact";
}
<h1>@ViewData["Title"]</h1>

<form method="post">
    <div> Voornaam: <input type="text" name="Firstname" /> </div>
    @Html.ValidationMessageFor(m => m.FirstName)
    <div>Achternaam: <input type="text" name="Lastname" /> </div>
    @Html.ValidationMessageFor(m => m.LastName)
    <div>E-mail: <input type="text" name="email" /> </div>
    @Html.ValidationMessageFor(m => m.Email)
    <div>Telefoon: <input type="text" name="phone" /> </div>
    <div>Adres: <input type="text" name="address" /> </div>
    <div> Beschrijving: <input type="text" name="bescrhijving" /> </div>
    @Html.ValidationMessageFor(m => m.Description)
    <input type="submit" value="opslaan" />
</form>

<p>Hallo @ViewBag["firstname"] @ViewBag["lastname"] welkom bij Wadly! Where you watch movies with fun!</p>

@if (Model!= null)
{
    <p>Hallo @Model.FirstName @Model.LastName </p>
}